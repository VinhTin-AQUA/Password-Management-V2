{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "password-management",
    "version": "1.0.0",
    "identifier": "com.newtun.passwordmanagement",
    "build": {
        "frontendDist": "../dist/password-management/browser",
        "devUrl": "http://localhost:4200",
        "beforeDevCommand": "ng s",
        "beforeBuildCommand": "ng build"
    },
    "app": {
        "windows": [
            {
                "title": "password-management",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "assetProtocol": {
                "enable": true,
                "scope": ["$APPDATA/**", "$LOCALDATA/**"]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
